{
  "name": "koa2-typescript-guide",
  "version": "0.1.4",
  "description": "the best practice of building Koa2 with TypeScript",
  "main": "app.ts",
  "scripts": {
    "test": "mocha",
    "cover:local": "nyc mocha;open coverage/lcov-report/index.html",
    "cover:hook": "nyc mocha;cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "export NODE_ENV=development; nodemon --config nodemon.json",
    "build": "npm run lint && tsc",
    "mongo": "docker-compose -f compose.yml up -d",
    "ci": "npm run test && npm run lint",
    "clean": "rm -rf dist"
  },
  "author": "DhyanaChina",
  "bugs": {
    "url": "https://github.com/DhyanaChina/koa2-typescript-guide/issues"
  },
  "engines": {
    "node": ">= 8.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/kcors": "^2.2.2",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "mocha": "^5.0.0",
    "nodemon": "^1.18.10",
    "nyc": "^11.4.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "nyc": {
    "include": [
      "test/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.nyc.ts"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "require": [
      "./node_modules/ts-node"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "cache": false,
    "report-dir": "./coverage",
    "all": true
  },
  "dependencies": {
    "kcors": "^2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "node-env-file": "^0.1.8",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.13"
  }
}
