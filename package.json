{
  "name": "koa-ts",
  "version": "3.0.0",
  "license": "MIT",
  "description": "The best practice of building Koa2 with TypeScript",
  "main": "app.ts",
  "scripts": {
    "test": "jest --config .jest.config.js --no-cache --detectOpenHandles",
    "prettier": "prettier --write '**/*.{js,ts}'",
    "dev": "export NODE_ENV=development; nodemon --config nodemon.json",
    "prod": "export NODE_ENV=production; node ./releases/app.js",
    "build": "bash ./build.sh",
    "compose": "POSTGRES_PORT=5432 docker-compose -f compose.yml up -d"
  },
  "author": "unix (unix.bio@gmail.com)",
  "bugs": {
    "url": "https://github.com/unix/koa-ts/issues"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "prettier": "@geist-ui/prettier-config",
  "devDependencies": {
    "@geist-ui/prettier-config": "^1.0.1",
    "@types/jest": "^25.2.2",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/node": "^14.14.34",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^2.20.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3",
    "typescript-transform-paths": "^2.2.3"
  },
  "dependencies": {
    "@prisma/client": "^2.20.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^8.0.8",
    "mongodb": "^3.5.7",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "typedi": "^0.8.0"
  }
}
